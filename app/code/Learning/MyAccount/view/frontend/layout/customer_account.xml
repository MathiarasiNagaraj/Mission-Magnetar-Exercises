<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" name="customer-account-navigation-bonuses-link">
               
                <arguments>
                     <argument name="label" xsi:type="string" translate="true">Bonuses</argument>
                    <argument name="path" xsi:type="string">bonuses/Customer/Index</argument>
                    <argument name="sortOrder" xsi:type="number">100</argument>
                </arguments>
            </block>
        </referenceBlock>

    <!-- Remove Downloadable Products -->
        <referenceBlock name="customer-account-navigation-downloadable-products-link" remove="true"/>
    </body>
</page>
